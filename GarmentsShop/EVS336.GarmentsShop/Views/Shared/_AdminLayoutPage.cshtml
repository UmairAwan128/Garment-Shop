@using EVS336.GarmentsShop.Models.Users
@{
    UserSessionModel currentUser = (UserSessionModel)Session[WebUtil.CURRENT_USER];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" lang="en-us" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    @RenderSection("mystyles", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainmenu">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/home/admin"><span class="glyphicon glyphicon-leaf"></span> TheGarments</a>
                </div>
                <div class="collapse navbar-collapse" id="mainmenu">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span> @currentUser.LoginId
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-asterisk"></span> Change Password</a></li>
                                <li class="divider"></li>
                                <li><a href="/users/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </header>

    <div id="maincontents" class="container-fluid">
        <div class="col-lg-3">
            <ul class="list-group">
                <li class="list-group-item"> <a href="/categories/manage">Categories</a></li>
                <li class="list-group-item"> <a href="/products/manage">Products</a></li>
                <li class="list-group-item"> <a href="#">Orders</a></li>
                <li class="list-group-item"> <a href="#">Users</a></li>
            </ul>
        </div>
        <div class="col-lg-9">
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("myscript", false)
</body>
</html>
